@page
@model MemberCoupon.Pages.Members.EditModel

@{
    ViewData["Title"] = "編輯";
}

<h1>編輯</h1>

<h4>會員</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.Id" />
            <div class="form-group">
                <label asp-for="Member.Number" class="control-label"></label>
                <input asp-for="Member.Number" class="form-control" />
                <span asp-validation-for="Member.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.MemberGroupId" class="control-label"></label>
                <select asp-for="Member.MemberGroupId" class="form-control" asp-items="SelectLists.MemberGroupList().Nullable()"></select>
                <span asp-validation-for="Member.MemberGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.SecureKey" class="control-label"></label>
                <input asp-for="Member.SecureKey" class="form-control" />
                <input type="button" onclick="$(this).prev().val('auto')" value="重設" />
                <span asp-validation-for="Member.SecureKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.ActiveUntil" class="control-label"></label>
                <input asp-for="Member.ActiveUntil" class="form-control" />
                <span asp-validation-for="Member.ActiveUntil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
