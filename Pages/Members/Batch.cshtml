@page
@model MemberCoupon.Pages.Members.BatchModel

@{
    ViewData["Title"] = "新增";
}

<h1>批量</h1>

<h4>會員</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numbers" class="control-label"></label>
                <textarea asp-for="Numbers" class="form-control"></textarea>
                <i>每行輸入一個</i>
                <span asp-validation-for="Numbers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberGroupId" class="control-label"></label>
                <select asp-for="MemberGroupId" class="form-control" asp-items="SelectLists.MemberGroupList().Nullable()"></select>
                <span asp-validation-for="MemberGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Action" class="control-label"></label>
                <select asp-for="Action" class="form-control">
                    <option value="Add">新增</option>
                    <option value="Disable">停用</option>
                    <option value="Reset">重設連結</option>
                    <option value="Print">打印 QR Code</option>
                    </select>
                <span asp-validation-for="Action" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">返回列表</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

